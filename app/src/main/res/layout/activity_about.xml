<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".AboutActivity">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="306dp"
        android:layout_height="89dp"
        android:contentDescription="Logo Aplikasi"
        android:src="@drawable/images1"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotyfy"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/appVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versi 1.0.0"
        android:textColor="#777"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/appDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Spotyfy merupakan aplikasi pemutar musik sederhana yang dikembangkan oleh mahasiswa sebagai bagian dari tugas kuliah. Aplikasi ini memungkinkan pengguna untuk menikmati lagu favorit secara mudah dan cepat."
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/appVersion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/developerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dikembangkan oleh: Rahmat Hidayah (Mahasiswa Informatika)"
        android:textSize="14sp"
        android:textColor="#555"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/appDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/contactInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NPM: 22 411 079"
        android:textSize="14sp"
        android:textColor="#555"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/developerInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/socialMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow IG saya: @rahmathidayah011"
        android:textSize="14sp"
        android:textColor="#555"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/contactInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali ke Dashboard"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/socialMedia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
